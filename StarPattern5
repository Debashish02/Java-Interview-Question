package com.pattern;

public class StarPattern5 {
    public static void main(String[] args) {
        for (int i = 1; i <= 4; i++) {
            for (int j = 3; j >= i; j--) {
                System.out.print(" ");
            }
            for (int k = 1; k <= i; k++) {
                System.out.print("* "); //space
            }
            System.out.println();
        }
    }
}

/*

    *
   * *
  * * *
 * * * *

 the only difference between pattern4 and 5 is the space in *
 */
