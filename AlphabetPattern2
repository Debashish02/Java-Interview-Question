package com.pattern;

public class AlphabetPattern2 {
    public static void main(String[] args) {
        int alpha = 97; //a
        for (int i = 0; i <= 5; i++) {
            for (int j = 0; j <= i; j++) {
                System.out.print((char) (alpha + j) + ""); // 97+0 = 97 ->a
            }
            System.out.println();
        }
    }
}
/*

a
ab
abc
abcd
abcde
abcdef

 */
